<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="aston.team4.studytimer.TimerActivity">

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TimerText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_button"
        android:id="@+id/stopButton"
        android:singleLine="true"
        android:onClick="onStopButtonPressed"
        android:layout_below="@+id/TimerText"
        android:layout_alignRight="@+id/TimerText"
        android:layout_alignEnd="@+id/TimerText"
        android:layout_marginTop="88dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause_button"
        android:id="@+id/pauseButton"
        android:onClick="onPauseButtonPressed"
        android:layout_alignTop="@+id/stopButton"
        android:layout_alignLeft="@+id/TimerText"
        android:layout_alignStart="@+id/TimerText" />

</RelativeLayout>
